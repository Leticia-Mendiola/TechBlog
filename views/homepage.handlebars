<div class="menu-container">
  <div class="card blue lighten-1">
    <h2>
      Latest Posts
    </h2>
  </div>
  {{#each allposts as |posts|}}
    <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{posts.post_title}}</span><span>Posted By:{{posts.username}}</span>
          <p>{{posts.post_body}}</p>
        </div>
        <div class="card-action">
          <a href="/posts/{{posts.id}}">View Comments</a>
          <span>Created:{{posts.created_at}}</span><span>Last Updated:{{posts.updated_at}}</span>
        </div>
      </div>
    </div>
  </div>
    {{!-- <div class="card col-md-5">
      <p>
        {{posts.id}}.
        {{posts.post_title}}
      </p>
    </div>
    <div class="card col-md-7">
      <p>
        {{posts.post_body}}
      </p>
    </div> --}}
  {{/each}}
</div>
<!-- This is the form for adding a new dish -->
<div class="add-dish-container">
  <h2>
    RSVP with the dish you plan to bring!
  </h2>
  <form class="new-dish-form">
    <label for="dish_name">
      Dish Name:
    </label>
    <br />
    <textarea id="dish_name" name="dish_name" rows="2" cols="30">
      {{dish_name}}
    </textarea>
    <br />
    <label for="description">
      Description:
    </label>
    <br />
    <textarea id="description" name="description" rows="5" cols="30">
      {{description}}
    </textarea>
    <br />
    <label for="guest_name">
      Guest Name:
    </label>
    <br />
    <textarea id="guest_name" name="guest_name" rows="2" cols="30">
      {{guest_name}}
    </textarea>
    <br />
    <br />
    <input type="checkbox" id="has_nuts" name="has_nuts" value="true" />
    <label for="has_nuts">
      Check box if this dish contains nuts
    </label>
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>
<script src="/js/add-post.js"></script>