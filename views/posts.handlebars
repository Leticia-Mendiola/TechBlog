<div class="row">
  <div class="col s12">
    <div class="card indigo lighten-1">
      <div class="card-content white-text">
        <div class="row">
        <span class="card-title col s8">{{posts.post_title}}</span><h6 class="col s4">Posted By: {{posts.username}}</h6>
        </div>
        <p>{{posts.post_body}}</p>
      </div>
      <div class="card-action">
        <a href="/posts/{{posts.id}}">View Comments</a>
        <span>Created: {{posts.created_at}}</span><span>Last Updated: {{posts.updated_at}}</span>
      </div>
    </div>
  </div>
</div>
{{#each onepost as |comments|}}
    <div class="row">
    <div class="col s12">
      <div class="card indigo lighten-1">
        <div class="card-content white-text">
          <div class="row">
          <span class="card-title col s8">{{comments.comment_title}}</span><h6 class="col s4">Posted By: {{comments.username}}</h6>
          </div>
          <p>{{comments.comment_body}}</p>
        </div>
        <div class="card-action">
          <span>Created: {{comments.created_at}}</span><span>Last Updated: {{comments.updated_at}}</span>
        </div>
      </div>
    </div>
  </div>
  {{/each}}